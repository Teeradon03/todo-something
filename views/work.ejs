<%- include("header.ejs") -%>

  <div class="collapse navbar-collapse " id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <a class="nav-link" href="/"><i class="far fa-calendar-alt"></i>Today</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/work"><i class="far fa-clone"></i>Work</a>
      </li>


    </ul>
  </div>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">

    <% for(var count=0; count<newlistItems.length; count++ ){ %>
      <div class="item">
        <input type="checkbox">
        <p>
          <%= newlistItems[count] %>
        </p>
      </div>
      <%} %>

        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" value="" autocomplete="off">

          <button type="submit" name="list" value=<%=listTitle %> >+</button>
        </form>

  </div>

  <%- include("footer.ejs") -%>